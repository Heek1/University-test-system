@model University_test_system.ViewModels.Tests.AddTestViewModel
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Редагувати тест";
    ViewData["Breadcrumb"] = @"
        <li class='breadcrumb-item'><a href='/Admin/Index'>Адмін</a></li>
        <li class='breadcrumb-item active'>Редагувати тест</li>";
}

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />

<div class="knu-page-header">
    <div class="container">
        <h1><i class="bi bi-pencil-square me-2"></i>Редагувати тест</h1>
        <p>Змініть дані тесту та збережіть</p>
    </div>
</div>

<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="knu-card">
                <div class="card-header">
                    <i class="bi bi-journal-text me-2"></i>Дані тесту
                </div>
                <div class="card-body p-4">
                    <form asp-action="EditTest" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Назва тесту</label>
                            <input asp-for="Title" class="form-control" placeholder="Введіть назву тесту" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Level" class="form-label">Рівень складності</label>
                            <select asp-for="Level" class="form-select"
                                    asp-items="@(new SelectList(Model.Levels))">
                                <option value="">-- Оберіть рівень складності --</option>
                            </select>
                            <span asp-validation-for="Level" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SubjectId" class="form-label">Предмет</label>
                            <select asp-for="SubjectId" class="form-select"
                                    asp-items="@(new SelectList(Model.Subjects, "Id", "Name", Model.SubjectId))">
                                <option value="">-- Оберіть предмет --</option>
                            </select>
                            <span asp-validation-for="SubjectId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Time" class="form-label">Час (хвилини)</label>
                            <input asp-for="Time" class="form-control" type="number" min="1" max="300" placeholder="Наприклад: 30" />
                            <span asp-validation-for="Time" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MaxAttempts" class="form-label">Кількість спроб</label>
                            <input asp-for="MaxAttempts" class="form-control" type="number" min="1" max="10" />
                            <span asp-validation-for="MaxAttempts" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Факультети</label>
                            <select name="SelectedFacultyIds" id="faculties-select"
                                    class="form-select" multiple="multiple" style="width:100%">
                                @foreach (var faculty in Model.Faculties)
                                {
                                    if (Model.SelectedFacultyIds.Contains(faculty.Id))
                                    {
                                        <option value="@faculty.Id" selected>@faculty.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@faculty.Id">@faculty.Name</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-knu">
                                <i class="bi bi-check-lg me-1"></i>Зберегти
                            </button>
                            <a asp-action="Index" class="btn btn-knu-outline">
                                <i class="bi bi-x-lg me-1"></i>Скасувати
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $('#faculties-select').select2({
            theme: 'bootstrap-5',
            placeholder: 'Оберіть факультети...',
            allowClear: true
        });
    </script>
}