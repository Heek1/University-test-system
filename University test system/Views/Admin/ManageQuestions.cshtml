@model University_test_system.Models.Test
@{
    ViewData["Title"] = "Питання тесту";
    ViewData["Breadcrumb"] = @"
        <li class='breadcrumb-item'><a href='/Admin/Index'>Адмін</a></li>
        <li class='breadcrumb-item active'>Питання тесту</li>";
}

<div class="knu-page-header">
    <div class="container">
        <h1><i class="bi bi-question-circle me-2"></i>@Model.Title</h1>
        <p>Керування питаннями та відповідями</p>
    </div>
</div>

<div class="container mb-5">

    <div class="knu-card mb-4">
        <div class="card-header">
            <i class="bi bi-plus-circle me-2"></i>Додати питання
        </div>
        <div class="card-body p-4">
            <form asp-action="AddQuestion" method="post" class="d-flex gap-2">
                @Html.AntiForgeryToken()
                <input type="hidden" name="testId" value="@Model.Id" />
                <input type="text" name="title" class="form-control"
                       placeholder="Текст питання" required />
                <button type="submit" class="btn btn-knu text-nowrap">
                    <i class="bi bi-plus-lg me-1"></i>Додати
                </button>
            </form>
        </div>
    </div>

    @if (!Model.Questions.Any())
    {
        <div class="text-center text-muted py-4">
            <i class="bi bi-inbox fs-3 d-block mb-2"></i>
            Питань поки немає
        </div>
    }

    @foreach (var (question, i) in Model.Questions.Select((q, i) => (q, i + 1)))
    {
        <div class="knu-card mb-3">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <h6 class="mb-0">
                        <span class="text-knu me-2">@i.</span>@question.Title
                    </h6>
                    <form asp-action="DeleteQuestion" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@question.Id" />
                        <input type="hidden" name="testId" value="@Model.Id" />
                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                onclick="return confirm('Видалити питання?')">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </div>

                <ul class="list-unstyled mb-3">
                    @foreach (var answer in question.Answers)
                    {
                        <li class="d-flex align-items-center gap-2 mb-1">
                            @if (answer.IsTrue)
                            {
                                <i class="bi bi-check-circle-fill text-success"></i>
                            }
                            else
                            {
                                <i class="bi bi-x-circle text-danger"></i>
                            }
                            <span>@answer.Text</span>
                        </li>
                    }
                </ul>

                <form asp-action="AddAnswer" method="post"
                      class="d-flex gap-2 align-items-center flex-wrap">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="questionId" value="@question.Id" />
                    <input type="hidden" name="testId" value="@Model.Id" />
                    <input type="text" name="text" class="form-control" style="max-width:300px"
                           placeholder="Текст відповіді" required />
                    <div class="form-check mb-0">
                        <input type="checkbox" name="isTrue" value="true"
                               class="form-check-input" id="correct_@question.Id" />
                        <label class="form-check-label" for="correct_@question.Id">Правильна</label>
                    </div>
                    <button type="submit" class="btn btn-knu-outline btn-sm">
                        <i class="bi bi-plus-lg me-1"></i>Додати відповідь
                    </button>
                </form>
            </div>
        </div>
    }

    <a asp-action="Index" class="btn btn-knu-outline mt-2">
        <i class="bi bi-arrow-left me-1"></i>Назад до тестів
    </a>
</div>