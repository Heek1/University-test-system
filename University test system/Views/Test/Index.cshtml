@model IEnumerable<University_test_system.Models.Test>
@{
    ViewData["Title"] = "Тести";
}

<div class="knu-page-header">
    <div class="container">
        <h1><i class="bi bi-journal-text me-2"></i>Доступні тести</h1>
        <p>Оберіть предмет та тест для проходження</p>
    </div>
</div>

<div class="container mb-5">
    @if (TempData["Warning"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Warning"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @{
        var testsBySubject = Model
            .GroupBy(t => t.Subject)
            .OrderBy(g => g.Key?.Name)
            .ToList();
    }

    @foreach (var subjectGroup in testsBySubject)
    {
        <div class="mb-5">
            <h3 class="section-title mb-4">
                <i class="bi bi-book me-2"></i>@(subjectGroup.Key?.Name ?? "Інший предмет")
            </h3>
            
            <div class="row g-4">
                @foreach (var test in subjectGroup)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="knu-card h-100">
                            <div class="card-body p-4">
                                <h5 class="card-title mb-3">@test.Title</h5>
                                
                                <div class="mb-4">
                                    <div class="d-flex align-items-center text-muted small mb-2">
                                        <i class="bi bi-clock me-2"></i>
                                        <span>Час виконання: @test.Time хвилин</span>
                                    </div>
                                    <div class="d-flex align-items-center text-muted small mb-2">
                                        <i class="bi bi-question-circle me-2"></i>
                                        <span>Кількість питань: @(test.Questions?.Count ?? 0)</span>
                                    </div>
                                    @{
                                        var attempts = ViewBag.Attempts as Dictionary<int, int> ?? new();
                                        int used = attempts.ContainsKey(test.Id) ? attempts[test.Id] : 0;
                                        int left = test.MaxAttempts - used;
                                    }
                                    <div class="d-flex align-items-center text-muted small">
                                        <i class="bi bi-arrow-repeat me-2"></i>
                                        @if (left > 0)
                                        {
                                            <span>Залишилось спроб: @left з @test.MaxAttempts</span>
                                        }
                                        else
                                        {
                                            <span class="text-danger">Спроби вичерпано</span>
                                        }
                                    </div>
                                </div>

                                @if (left > 0)
{
    <a asp-action="Take" asp-route-id="@test.Id" class="btn btn-knu w-100">
        <i class="bi bi-play-circle me-2"></i>Розпочати тест
    </a>
}
else
{
    <button class="btn btn-secondary w-100" disabled>
        <i class="bi bi-x-circle me-2"></i>Спроби вичерпано
    </button>
}
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    
    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="display-1 text-muted mb-3">
                <i class="bi bi-journal-x"></i>
            </div>
            <h4>Немає доступних тестів</h4>
            <p class="text-muted">На даний момент немає тестів для проходження</p>
            
            @if (User.IsInRole("Admin"))
            {
                <a href="/Admin/CreateTest" class="btn btn-knu mt-3">
                    <i class="bi bi-plus-circle me-2"></i>Створити тест
                </a>
            }
        </div>
    }
</div>