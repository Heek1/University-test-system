@model IEnumerable<University_test_system.Models.Attempt>

@{
    ViewData["Title"] = "Лідерборд";
}

<div class="knu-page-header">
    <div class="container">
        <h1><i class="bi bi-trophy me-2"></i>Лідерборд</h1>
        <p>Топ учасників за результатами тестів</p>
    </div>
</div>

<div class="min-vh-50 d-flex align-items-center justify-content-center py-5">
    <table class="knu-table thead th">
    <thead>
        <tr>
            <th class="text-center">Місце</th>
            <th class="text-center">Користувач</th>
            <th class="text-center">Назва тесту</th>
            <th class="text-center">Предмет</th>
            <th class="text-center">Дата спроби</th>
            <th class="text-center">Бали</th>
            <th class="text-center">Дії</th>
        </tr>
    </thead>
        <tbody class="knu-table tbody tr">
        @if (Model != null && Model.Any())
        {
            var rank = 1;
            foreach (var attempt in Model)
            {
                <tr>
                    <td class="text-center align-middle">@rank</td>
                    <td class="text-center align-middle">@(attempt.User?.DisplayName ?? attempt.User?.UserName ?? "—")</td>
                    <td class="text-center align-middle">@attempt.Test.Title</td>
                    <td class="text-center align-middle">@attempt.Test.Subject?.Name</td>
                    <td class="text-center align-middle">@attempt.AttemptDate.ToString("dd.MM.yyyy HH:mm")</td>
                    <td class="text-center align-middle">@attempt.Score</td>
                    <td class="text-center align-middle">
                        <div class="d-flex flex-column gap-1">
                            <a asp-action="Result" asp-route-id="@attempt.Id" class="btn btn-knu w-100">
                                Переглянути результат
                            </a>

                            <a asp-action="History" asp-controller="Test" class="btn btn-knu w-100">
                                Перейти до історії тестів
                            </a>
                        </div>
                    </td>
                </tr>
                rank++;
            }
        }
        else
        {
            <tr>
                <td colspan="6">Немає спроб для цього тесту.</td>
            </tr>
        }
        </tbody>
    </table>
</div>